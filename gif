if [ $# -eq 0 ]; then
    echo "ðŸ¤¨ Please provide an input"
    exit
fi

URL="https://www.toptal.com/developers/gitignore/api/list"
RES=$(curl -s $URL | grep -ioe "\w*$1\w*" --color=always )
echo $RES
